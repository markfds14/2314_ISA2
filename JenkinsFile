pipeline{
    agent any

    stages{
        stage("Clone Repository"){
            steps{
                git "https://github.com/markfds14/2314_ISA2.git"
            }
        }
        stage("Build Docker Image"){
            steps{
               script{
                    bat "docker build -t markfds14/dockerfile ."
               }
        
            }
        }
        stage("Delete Container "){
            steps{
               script{
                    bat "docker rm -f docker-container || exit 0"
               }
        
            }
        }
        stage("Build and run Docker Container"){
            steps{
               script{
                    bat "docker run -d --name docker-container markfds14/dockerfile"
               }
        
            }
        }

    }
}
